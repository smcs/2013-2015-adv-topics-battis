
public class Starsa {

	public static void main(String[] args) {
		int row, spaces;

		for (row = 0; row < 7; row++) {
			for (spaces = 0; spaces < row; spaces++) {
				System.out.print(" ");
			}
			System.out.println("*");
		}
		
		row = 0;
		while (row < 7) {
			spaces = 0;
			do {
				System.out.print(" ");
			} while (spaces < row);
			System.out.println("*");
		}
	}

}
