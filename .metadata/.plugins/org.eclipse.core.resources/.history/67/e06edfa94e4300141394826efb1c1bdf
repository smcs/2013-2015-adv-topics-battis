
public class Starsa {

	public static void main(String[] args) {
		int row, spaces;

		int x = 42;
		for (x =17; x < 0; x++) {
			
		}
		System.out.println(x);
		
		for (row = 0; row < 7; row++) {
			for (spaces = 0; spaces < row; spaces++) {
				System.out.print(" ");
			}
			System.out.println("*");
		}
		
		row = 0;
		while (row < 7) {
			spaces = 0;
			do {
				System.out.print(" ");
				spaces++;
			} while (spaces < row);
			System.out.println("*");
			row++;
		}
	}

}
